<h1>新しい大会を作成する</h1>
<%= form_for [@project, @project.matchings.build] do |f| %>
  <% if @create_matching.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@create_matching.errors.count, "error") %> prohibited this create_matching from being saved:</h2>

      <ul>
      <% @create_matching.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "大会名" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "主催者" %><br>
    <%= f.text_field :owner %>
  </div>
  <div class="field">
    <%= f.label "作品名" %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label "参加条件" %><br>
    <%= f.text_field :reguration %>
  </div>
  <div class="field">
    <%= f.label "受付締切" %><br>
    <%= f.datetime_select :limit %>
  </div>
  <div class="field">
    <%= f.label "開始日時" %><br>
    <%= f.datetime_select :start %>
  </div>
  <div class="field">
    <%= f.label "備考" %><br>
    <%= f.text_area :memo %>
  </div>
  <div class="actions">
    <%= f.submit "大会作成" %>
  </div>
<% end %>


<%= link_to "大会一覧へ", project_matchings_path(@project.id) %>
