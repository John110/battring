<h1><%= @project.title %> 大会一覧</h1>
<%= link_to '新しく大会を作成する', new_project_matching_path(@project.id) %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>大会名</th>
      <th>主催者</th>
      <th>作品名</th>
      <th>参加条件</th>
      <th>受付締切</th>
      <th>開始日時</th>
      <th>備考</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @create_matchings.each do |create_matching| %>
      <tr>
        <td><%= link_to "#{create_matching.name}", project_matching_path(create_matching.project_id, create_matching.id) %></td>
        <td><%= create_matching.owner %></td>
        <td><%= create_matching.title %></td>
        <td><%= create_matching.reguration %></td>
        <td><%= create_matching.limit %></td>
        <td><%= create_matching.start %></td>
        <td><%= create_matching.memo %></td>
        <td><%= link_to '編集', edit_project_matching_path(create_matching.project_id, create_matching.id) %></td>
        <td><%= link_to '削除', project_matching_path(create_matching.project_id, create_matching.id), method: :delete, data: { confirm: "#{create_matching.name}を削除します。\n本当によろしいですか?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

