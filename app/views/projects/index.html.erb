<%- model_class = Project -%>
<div class="page-header">
  <h1>登録タイトル一覧</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>タイトル</th>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
    <tr>
      <td><%= link_to project.title, project_path(project.id) %></td>
      <td>
        <%= link_to "大会", project_matchings_path(project.id) %>
        <%= link_to t('.destroy', :default => t("削除")),
        project_path(project.id),
        :method => :delete,
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
        :class => 'btn btn-xs btn-danger pull-right' %>
        <%= link_to t('.edit', :default => t("編集")),
        edit_project_path(project.id), :class => 'btn btn-default btn-xs pull-right' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("新規作成")),
new_project_path,
:class => 'btn btn-primary' %>
