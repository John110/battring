<html>
<head>
  <title>バトリング</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="home-wrap">
  <%= yield %>
</div>

<nav class="home-nav">
  <table rules="none" width = "100%">
    <td><%= image_tag '/../../assets/logo_black.png', :width => '207', :height => '100' %></td>
    <td align = "right"><%= link_to "初めての方はここから", new_player_registration_path, :class => "btn btn-default btn-lg block" %></td>
    <td align = "center"><%= link_to "今すぐ絆を深める", new_player_session_path, :class => "btn btn-default btn-lg block" %></td>
</table>
</nav>


<div class = "back">
  <div class = "logo">
  <center>
    <%= image_tag '/../../assets/logo.gif', :width => '758', :height => '254' %><br>
  </center>
  </div>

  <div class = "sign_in">
    <table>
      <td><%= link_to image_tag('/../../assets/signin2.png', :width => '400', :height => '295'), new_player_registration_path %></td>
      <td><%= link_to image_tag('/../../assets/login2.png', :width => '400', :height => '295'),
        new_player_session_path %></td>
    </table>
  </div>

  <div class = "advertize">
    <%= image_tag '/../../assets/advertize.png', :width => '800', :height => '611' %>
  </div>

  <div class = "explain">
    <%= image_tag '/../../assets/explain_baked.png', :width => '800', :height => '600' %>
  </div>
</div>
</body>
</html>