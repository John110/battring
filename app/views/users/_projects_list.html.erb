<script type="text/javascript"><!--
function doToggleClassName(obj, onClassName, offClassName){obj.className = (obj.className != onClassName) ? onClassName : offClassName;}
function getParentObj(obj){return obj.parentElement || obj.parentNode;}
//--></script>

<div class="vmenu_off">
  <div class="vmenuitem" onclick="doToggleClassName(getParentObj(this),'vmenu_on','vmenu_off')" align="center">格闘</div>
  <ul class="list">
    <% projects = Project.where("genre = ?", "格闘") %>
    <% projects.each do |project| %>
    <li><%= link_to project.title, user_project_path(@user.id, project.id) %></li>
    <% end %>
  </ul>
</div>
